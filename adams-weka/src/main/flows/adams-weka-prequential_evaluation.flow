adams.flow.control.Flow
	-annotation
	Shows how to perform prequential evaluation\n(first evaluate, then train) using an incremental\nWeka classifier and plotting the performance.
	-actor
		adams.flow.standalone.GridView
			-actor
				adams.flow.sink.SimplePlot
					-name
					Accuracy
					-writer
						adams.gui.print.NullWriter
					-paintlet
						adams.gui.visualization.sequence.CirclePaintlet
					-mouse-click-action
						adams.flow.sink.sequenceplotter.NullClickAction
					-color-provider
						adams.gui.visualization.core.DefaultColorProvider
					-title
					Accuracy
					-axis-x
						adams.gui.visualization.core.AxisPanelOptions
							-label
							evaluation step
							-tick-generator
								adams.gui.visualization.core.axis.FancyTickGenerator
									-num-ticks
									20
							-nth-value
							2
							-width
							40
							-custom-format
							0
					-axis-y
						adams.gui.visualization.core.AxisPanelOptions
							-label
							percent
							-tick-generator
								adams.gui.visualization.core.axis.FancyTickGenerator
							-nth-value
							2
							-width
							60
							-custom-format
							0.0
			-actor
				adams.flow.sink.SimplePlot
					-name
					RMSE
					-writer
						adams.gui.print.NullWriter
					-paintlet
						adams.gui.visualization.sequence.CirclePaintlet
					-mouse-click-action
						adams.flow.sink.sequenceplotter.NullClickAction
					-color-provider
						adams.gui.visualization.core.DefaultColorProvider
					-title
					RMSE
					-axis-x
						adams.gui.visualization.core.AxisPanelOptions
							-label
							evaluation step
							-tick-generator
								adams.gui.visualization.core.axis.FancyTickGenerator
									-num-ticks
									20
							-nth-value
							2
							-width
							40
							-custom-format
							0
					-axis-y
						adams.gui.visualization.core.AxisPanelOptions
							-label
							error
							-tick-generator
								adams.gui.visualization.core.axis.FancyTickGenerator
							-nth-value
							2
							-width
							60
							-custom-format
							0.0
			-num-rows
			2
			-writer
				adams.gui.print.NullWriter
	-actor
		adams.flow.standalone.CallableActors
			-actor
				adams.flow.source.WekaClassifierSetup
					-classifier
						weka.classifiers.bayes.NaiveBayesUpdateable
	-actor
		adams.flow.source.FileSupplier
			-file
			${EXAMPLE_FLOWS}/data/anneal.arff
	-actor
		adams.flow.transformer.WekaFileReader
			-loader
				weka.core.converters.AArffLoader
			-output-type
			INCREMENTAL
	-actor
		adams.flow.transformer.WekaClassSelector
	-actor
		adams.flow.transformer.WekaPrequentialEvaluator
			-interval
			25
	-actor
		adams.flow.control.Tee
			-name
			accuracy
			-tee
				adams.flow.transformer.WekaEvaluationValuePicker
			-tee
				adams.flow.transformer.MakePlotContainer
					-plot-name
					accuracy
			-tee
				adams.flow.sink.CallableSink
					-callable
					Accuracy
	-actor
		adams.flow.control.Tee
			-name
			rmse
			-tee
				adams.flow.transformer.WekaEvaluationValuePicker
					-statistic
					ROOT_MEAN_SQUARED_ERROR
			-tee
				adams.flow.transformer.MakePlotContainer
					-plot-name
					rmse
			-tee
				adams.flow.sink.CallableSink
					-callable
					RMSE
	-flow-execution-listener
		adams.flow.execution.NullListener

