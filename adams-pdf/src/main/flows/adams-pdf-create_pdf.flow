adams.flow.control.Flow -annotation "Generating a PDF from existing files is very easy as this flow\\ndemonstrates. The PDF actor adds all files that it can handle\\nfrom the array received as input, using the specified proclets." -flow-execution-listener adams.flow.execution.NullListener
 adams.flow.source.FileSystemSearch -output-array true -search "adams.flow.source.filesystemsearch.FileSearch -directory ${EXAMPLE_FLOWS}/data -regexp (bolts.csv|lorem.txt|366.*.jpg)"
 adams.flow.transformer.PDFCreate -output ${EXAMPLE_FLOWS}/output/out.pdf -proclet "adams.flow.transformer.pdfproclet.PlainText -add-filename true -page-break-before true -font-content Courier-Normal-10" -proclet "adams.flow.transformer.pdfproclet.SpreadSheet -add-filename true -page-break-before true -reader \"adams.data.io.input.CsvSpreadSheetReader -data-row-type adams.data.spreadsheet.DenseDataRow -spreadsheet-type adams.data.spreadsheet.DefaultSpreadSheet\"" -proclet "adams.flow.transformer.pdfproclet.Image -add-filename true -page-break-before true -scale 0.75 -use-absolute-position true -x 50.0 -y 100.0" -proclet "adams.flow.transformer.pdfproclet.Rectangle -extension jpg -x 110.0 -y 10.0 -width 50.0 -color #ff0000 -fill true" -proclet "adams.flow.transformer.pdfproclet.Rectangle -extension jpg -x 10.0 -y 10.0 -width 50.0 -color #ff0000" -proclet "adams.flow.transformer.pdfproclet.Line -extension jpg -x1 100.0 -y1 400.0 -x2 150.0 -y2 550.0 -color #3333ff -line-width 10.0" -proclet "adams.flow.transformer.pdfproclet.Circle -extension jpg -x 300.0 -y 500.0 -radius 50.0" -proclet "adams.flow.transformer.pdfproclet.Circle -extension jpg -x 500.0 -y 500.0 -radius 50.0 -color #66ff66 -fill true"
 adams.flow.sink.PDFViewer -writer adams.gui.print.NullWriter -zoom 75.0
