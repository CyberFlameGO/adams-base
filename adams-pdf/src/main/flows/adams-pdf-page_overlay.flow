adams.flow.control.Flow
	-annotation
	Demonstrates how to add page numbers to an existing PDF.
	-actor
		adams.flow.standalone.CallableActors
			-actor
				adams.flow.control.Sequence
					-name
					display
					-actor
						adams.flow.sink.DisplayPanelManager
							-provider
								adams.flow.sink.PDFViewer
									-writer
										adams.gui.print.NullWriter
							-entry-name-variable
							entry
	-actor
		adams.flow.source.FileSupplier
			-file
			${EXAMPLE_FLOWS}/data/multiple_images.pdf
	-actor
		adams.flow.control.Tee
			-name
			original
			-tee
				adams.flow.transformer.SetVariable
					-var-name
					entry
					-var-value
					original
			-tee
				adams.flow.sink.CallableSink
					-callable
					display
	-actor
		adams.flow.transformer.PDFStamp
			-stamper
				adams.flow.transformer.pdfstamp.Text
					-template
					- @ -
					-font
					Helvetica-Bold-12
					-x
					300.0
					-y
					800.0
			-output
			${TMP}/overlay.pdf
	-actor
		adams.flow.transformer.SetVariable
			-var-name
			entry
			-var-value
			stamped
	-actor
		adams.flow.sink.CallableSink
			-callable
			display
	-flow-execution-listener
		adams.flow.execution.NullListener

