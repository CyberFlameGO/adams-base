adams.flow.control.Flow
	-annotation
	Drawing on images is easy using the Draw transformer and its\nvarious draw operations.
	-actor
		adams.flow.standalone.CallableActors
			-actor
				adams.flow.source.SequenceSource
					-name
					image
					-actor
						adams.flow.source.FileSupplier
							-file
							${EXAMPLE_FLOWS}/data/3666455665_18795f0741.jpg
					-actor
						adams.flow.transformer.ImageReader
							-reader
								adams.data.io.input.JAIImageReader
					-actor
						adams.flow.transformer.BufferedImageTransformer
							-transformer
								adams.data.jai.transformer.Resize
									-width
									100.0
									-height
									100.0
	-actor
		adams.flow.source.NewImage
			-width
			600
			-height
			400
	-actor
		adams.flow.transformer.Draw
			-name
			Line
			-operation
				adams.flow.transformer.draw.Line
					-x1
					10
					-y1
					40
					-x2
					400
					-y2
					45
	-actor
		adams.flow.transformer.Draw
			-name
			Pixel
			-operation
				adams.flow.transformer.draw.Pixel
					-color
					#ff3333
					-x
					150
					-y
					100
					-type
					COLOR
	-actor
		adams.flow.transformer.Draw
			-name
			Oval
			-operation
				adams.flow.transformer.draw.Oval
					-color
					#3366ff
					-x
					200
					-y
					200
					-width
					100
					-height
					40
	-actor
		adams.flow.transformer.Draw
			-name
			Filled Oval
			-operation
				adams.flow.transformer.draw.Oval
					-color
					#99ff33
					-x
					250
					-y
					250
					-width
					50
					-height
					20
					-fill
					true
	-actor
		adams.flow.transformer.Draw
			-name
			Rectangle
			-operation
				adams.flow.transformer.draw.Rectangle
					-color
					#660066
					-x
					400
					-y
					300
					-width
					20
	-actor
		adams.flow.transformer.Draw
			-name
			Rounded Rectangle
			-operation
				adams.flow.transformer.draw.Rectangle
					-color
					#660066
					-x
					450
					-y
					300
					-width
					30
					-height
					20
					-arc-width
					10
					-arc-height
					10
	-actor
		adams.flow.transformer.Draw
			-name
			Filled Rectangle
			-operation
				adams.flow.transformer.draw.Rectangle
					-color
					#3399ff
					-x
					480
					-y
					350
					-width
					20
					-fill
					true
	-actor
		adams.flow.transformer.Draw
			-name
			Text
			-operation
				adams.flow.transformer.draw.Text
					-color
					#006666
					-x
					50
					-y
					300
					-font
					Monospaced-PLAIN-16
	-actor
		adams.flow.transformer.Draw
			-operation
				adams.flow.transformer.draw.Image
					-x
					10
					-y
					100
					-image-actor
					image
	-actor
		adams.flow.sink.ImageViewer
			-height
			550
			-writer
				adams.gui.print.NullWriter
			-selection-processor
				adams.gui.visualization.image.selection.NullProcessor
			-image-overlay
				adams.gui.visualization.image.NullOverlay
	-flow-execution-listener
		adams.flow.execution.NullListener

