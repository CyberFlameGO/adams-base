adams.flow.control.Flow -annotation "Lets the user select images that form the background images  for \\nOpenCV\\\'s opencv_haartraining and opencv_traincascade tools." -flow-execution-listener adams.flow.execution.NullListener
 adams.flow.source.Start
 adams.flow.control.Trigger -name "prompt user"
  adams.flow.source.EnterManyValues -stop-if-canceled true -value "adams.flow.source.valuedefinition.DefaultValueDefinition -name image_dir -display \"Dir with background images\" -type DIRECTORY_ABSOLUTE -default-value ${CWD}" -value "adams.flow.source.valuedefinition.DefaultValueDefinition -name outfile -display \"Output file\" -help \"The background file listing all the selected images\" -type FILE_ABSOLUTE -default-value ${CWD}/bg.txt" -output-type MAP
  adams.flow.transformer.MapToVariables
 adams.flow.control.Trigger -name "Select/process files"
  adams.flow.source.SelectFile -output-array true -stop-if-canceled true -initial-dir @{image_dir} -extension jpg,jpeg,png -absolute true
  adams.flow.transformer.StringJoin -glue \n
  adams.flow.sink.DumpFile -output @{outfile}