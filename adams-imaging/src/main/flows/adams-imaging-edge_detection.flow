adams.flow.control.Flow
	-annotation
	Demonstrates how to detect edges.
	-actor
		adams.flow.standalone.CallableActors
			-actor
				adams.flow.sink.DisplayPanelManager
					-name
					ImageViewer
					-width
					740
					-provider
						adams.flow.sink.ImageViewer
							-writer
								adams.gui.print.NullWriter
							-selection-processor
								adams.gui.visualization.image.selection.NullProcessor
							-image-overlay
								adams.gui.visualization.image.NullOverlay
					-entry-name-variable
					name
	-actor
		adams.flow.source.FileSupplier
			-file
			${EXAMPLE_FLOWS}/data/particles.jpg
			-file
			${EXAMPLE_FLOWS}/data/4825046958_787c97bc96.jpg
			-file
			${EXAMPLE_FLOWS}/data/3666455665_18795f0741.jpg
	-actor
		adams.flow.control.Tee
			-name
			filename
			-tee
				adams.flow.transformer.BaseName
					-remove-extensions
					true
			-tee
				adams.flow.transformer.SetVariable
					-var-name
					base
	-actor
		adams.flow.transformer.JAIReader
	-actor
		adams.flow.control.Tee
			-name
			original
			-tee
				adams.flow.transformer.SetVariable
					-var-name
					name
					-var-value
					@{base}-original
					-expand-value
					true
			-tee
				adams.flow.sink.CallableSink
					-callable
					ImageViewer
	-actor
		adams.flow.transformer.BoofCVTransformer
			-transformer
				adams.data.boofcv.transformer.CannyEdgeDetection
	-actor
		adams.flow.transformer.SetVariable
			-var-name
			name
			-var-value
			@{base}-edges
			-expand-value
			true
	-actor
		adams.flow.sink.CallableSink
			-callable
			ImageViewer
	-flow-execution-listener
		adams.flow.execution.NullListener

