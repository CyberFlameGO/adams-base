adams.flow.control.Flow
	-annotation
	This flow demonstrates how to superimpose two timeseries\nusing the TimeseriesAdd actor.
	-actor
		adams.flow.standalone.CallableActors
			-actor
				adams.flow.sink.TimeseriesDisplay
					-name
					Sales
					-writer
						adams.gui.print.NullWriter
					-axis-x
						adams.gui.visualization.timeseries.DefaultTimeseriesXAxisPanelOptions
							-label
							date
							-type
							DATE
							-tick-generator
								adams.gui.visualization.core.axis.PeriodicityTickGenerator
									-periodicity
									YEARLY
									-format
									yyyy
							-nth-value
							2
							-width
							40
							-custom-format
							yyyy
							-periodicity
							YEARLY
					-axis-y
						adams.gui.visualization.timeseries.DefaultTimeseriesYAxisPanelOptions
							-label
							sales (1000s ltr)
							-tick-generator
								adams.gui.visualization.core.axis.FancyTickGenerator
							-nth-value
							2
							-width
							60
							-custom-format
							0
					-color-provider
						adams.gui.visualization.core.DefaultColorProvider
	-actor
		adams.flow.source.FileSupplier
			-file
			${EXAMPLE_FLOWS}/data/wine.arff
	-actor
		adams.flow.transformer.SpreadSheetFileReader
			-reader
				adams.data.io.input.ArffSpreadSheetReader
					-spreadsheet-type
						adams.data.spreadsheet.SpreadSheet
	-actor
		adams.flow.control.Tee
			-name
			red
			-tee
				adams.flow.transformer.Convert
					-conversion
						adams.data.conversion.SpreadSheetToTimeseries
							-date-column
							Date
							-value-column
							Red
			-tee
				adams.flow.control.Tee
					-tee
						adams.flow.transformer.Copy
					-tee
						adams.flow.transformer.SetID
							-id
							red
					-tee
						adams.flow.control.Cast
							-classname
							adams.data.timeseries.Timeseries
					-tee
						adams.flow.sink.CallableSink
							-callable
							Sales
			-tee
				adams.flow.transformer.SetID
					-id
					red+white
			-tee
				adams.flow.control.Cast
					-classname
					adams.data.timeseries.Timeseries
			-tee
				adams.flow.transformer.TimeseriesAdd
					-storage-name
					series
	-actor
		adams.flow.control.Tee
			-name
			white
			-tee
				adams.flow.transformer.Convert
					-conversion
						adams.data.conversion.SpreadSheetToTimeseries
							-date-column
							Date
							-value-column
							Dry-white
			-tee
				adams.flow.control.Tee
					-tee
						adams.flow.transformer.Copy
					-tee
						adams.flow.transformer.SetID
							-id
							white
					-tee
						adams.flow.control.Cast
							-classname
							adams.data.timeseries.Timeseries
					-tee
						adams.flow.sink.CallableSink
							-callable
							Sales
			-tee
				adams.flow.transformer.SetID
					-id
					red+white
			-tee
				adams.flow.control.Cast
					-classname
					adams.data.timeseries.Timeseries
			-tee
				adams.flow.transformer.TimeseriesAdd
					-storage-name
					series
	-actor
		adams.flow.control.Trigger
			-tee
				adams.flow.source.StorageValue
					-storage-name
					series
			-tee
				adams.flow.sink.CallableSink
					-callable
					Sales
	-flow-execution-listener
		adams.flow.execution.NullListener

