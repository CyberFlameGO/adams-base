adams.flow.control.Flow
	-annotation
	This flow generates a Gnuplot script file for the \"bolts\" UCI dataset.\nIt then executes gnuplot (executable needs to be on the PATH).\nThe plot closes automatically after 5 seconds.
	-actor
		adams.flow.standalone.SetVariable
			-name
			SetVariable (data)
			-var-name
			data_file
			-var-value
			${EXAMPLE_FLOWS}/output/bolts_plot.data
	-actor
		adams.flow.standalone.SetVariable
			-name
			SetVariable (script)
			-var-name
			script_file
			-var-value
			${EXAMPLE_FLOWS}/output/bolts_plot.script
	-actor
		adams.flow.source.Start
	-actor
		adams.flow.control.Trigger
			-name
			generate data file
			-tee
				adams.flow.source.FileSupplier
					-file
					${EXAMPLE_FLOWS}/data/bolts.csv
			-tee
				adams.flow.transformer.SpreadSheetFileReader
					-reader
						adams.data.io.input.CsvSpreadSheetReader
							-spreadsheet-type
								adams.data.spreadsheet.SpreadSheet
			-tee
				adams.flow.sink.SpreadSheetFileWriter
					-output
					@{data_file}
					-writer
						adams.data.io.output.GnuplotSpreadSheetWriter
	-actor
		adams.flow.control.Trigger
			-name
			generate script file
			-tee
				adams.flow.source.Variable
					-var-name
					data_file
			-tee
				adams.flow.sink.GnuplotScript
					-output
					@{script_file}
					-scriptlet
						adams.core.gnuplot.MultiScriptlet
							-scriptlet
								adams.core.gnuplot.Initialize
									-title
									bolts dataset
									-x-label
									target variable
									-y-label
									input variables
							-scriptlet
								adams.core.gnuplot.SimplePlot
									-cols
									8:2
									-plot-type
									POINTS
									-plot-name
									speed1 vs t20bolt
									-first-plot
									true
							-scriptlet
								adams.core.gnuplot.SimplePlot
									-cols
									8:7
									-plot-type
									POINTS
									-plot-name
									time vs t20bolt
							-scriptlet
								adams.core.gnuplot.Pause
									-waiting-period
									5
									-message
									Press <Enter> to close the plot...
							-use-single-data-file
							true
	-actor
		adams.flow.control.Trigger
			-name
			execute gnuplot
			-tee
				adams.flow.standalone.Gnuplot
					-script-file
					@{script_file}
	-flow-execution-listener
		adams.flow.execution.NullListener

