adams.flow.control.Flow
	-annotation
	Compares the accucary of a Hoeffding tree classifier with\nNaiveBayes on a RandomTree data stream.
	-actor
		adams.flow.standalone.CallableActors
			-actor
				adams.flow.source.MOAClassifierSetup
					-name
					Hoeffding
					-classifier
					moa.classifiers.trees.HoeffdingTree
			-actor
				adams.flow.source.MOAClassifierSetup
					-name
					NaiveBayes
					-classifier
					moa.classifiers.bayes.NaiveBayes
			-actor
				adams.flow.sink.SequencePlotter
					-writer
						adams.gui.print.NullWriter
					-paintlet
						adams.gui.visualization.sequence.LinePaintlet
							-paint-all
							true
					-overlay-paintlet
						adams.gui.visualization.sequence.CirclePaintlet
					-marker-paintlet
						adams.flow.sink.sequenceplotter.NoMarkers
					-error-paintlet
						adams.flow.sink.sequenceplotter.NoErrorPaintlet
					-color-provider
						adams.gui.visualization.core.DefaultColorProvider
					-overlay-color-provider
						adams.gui.visualization.core.DefaultColorProvider
					-title
					Classifier comparison
					-axis-x
						adams.gui.visualization.core.AxisPanelOptions
							-label
							Evaluation step
							-tick-generator
								adams.gui.visualization.core.axis.FancyTickGenerator
							-nth-value
							2
							-width
							40
							-custom-format
							0
					-axis-y
						adams.gui.visualization.core.AxisPanelOptions
							-label
							Accuracy in %
							-tick-generator
								adams.gui.visualization.core.axis.FancyTickGenerator
							-nth-value
							2
							-width
							60
							-custom-format
							0.0
					-plot-updater
						adams.flow.sink.sequenceplotter.SimplePlotUpdater
					-post-processor
						adams.flow.sink.sequenceplotter.PassThrough
	-actor
		adams.flow.source.MOAStream
			-stream
			moa.streams.generators.RandomTreeGenerator
	-actor
		adams.flow.control.Branch
			-branch
				adams.flow.control.Sequence
					-name
					hoeffding
					-actor
						adams.flow.transformer.MOAClassifierEvaluation
							-classifier
							Hoeffding
							-output-interval
							100
					-actor
						adams.flow.transformer.MOAMeasurementsFilter
							-regexp
							.*classifications.*
					-actor
						adams.flow.transformer.MOAMeasurementPlotGenerator
							-prefix
							h: 
					-actor
						adams.flow.sink.CallableSink
							-callable
							SequencePlotter
			-branch
				adams.flow.control.Sequence
					-name
					naivebayes
					-actor
						adams.flow.transformer.MOAClassifierEvaluation
							-classifier
							NaiveBayes
							-output-interval
							100
					-actor
						adams.flow.transformer.MOAMeasurementsFilter
							-regexp
							.*classifications.*
					-actor
						adams.flow.transformer.MOAMeasurementPlotGenerator
							-prefix
							nb: 
					-actor
						adams.flow.sink.CallableSink
							-callable
							SequencePlotter
	-flow-execution-listener
		adams.flow.execution.NullListener

