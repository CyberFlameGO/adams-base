adams.flow.control.Flow
	-annotation
	The outer loop in this flow generates the file name for\nthe template generator which gets executed in the\ninner loop.
	-actor
		adams.flow.source.ForLoop
			-upper
			3
	-actor
		adams.flow.transformer.Convert
			-conversion
				adams.data.conversion.IntToString
	-actor
		adams.flow.transformer.StringReplace
			-find
			^
			-replace
			${EXAMPLE_FLOWS}/adams-meta-external_flow_variable-
			-placeholder
			true
	-actor
		adams.flow.transformer.StringReplace
			-name
			StringReplace-1
			-find
			$
			-replace
			.flow
	-actor
		adams.flow.transformer.SetVariable
			-var-name
			filename
	-actor
		adams.flow.control.Trigger
			-tee
				adams.flow.source.ForLoop
			-tee
				adams.flow.transformer.TemplateTransformer
					-template
						adams.flow.template.FromFile
							-template
							@{filename}
			-tee
				adams.flow.sink.Display
	-flow-execution-listener
		adams.flow.execution.NullListener

