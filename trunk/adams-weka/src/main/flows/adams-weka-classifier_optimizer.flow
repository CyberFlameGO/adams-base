adams.flow.control.Flow
	-annotation
	This flow loads a number of datasets and uses GridSearch\nto find the optimal setup of a FilteredClassifier (using J48) \nfor each of the datasets. The setups, prefixed by the dataset \nfile name, are displayed.
	-actor
		adams.flow.source.FileSupplier
			-file
			${EXAMPLE_FLOWS}/data/anneal.arff
			-file
			${EXAMPLE_FLOWS}/data/iris.arff
			-file
			${EXAMPLE_FLOWS}/data/labor.arff
	-actor
		adams.flow.control.Tee
			-tee
				adams.flow.transformer.StringReplace
					-find
					.*\\/
					-type
					ALL
			-tee
				adams.flow.transformer.SetVariable
					-var-name
					dataset
	-actor
		adams.flow.transformer.WekaFileReader
			-loader
				weka.core.converters.ArffLoader
	-actor
		adams.flow.transformer.WekaClassSelector
	-actor
		adams.flow.transformer.WekaClassifierOptimizer
			-optimizer
				weka.classifiers.meta.GridSearch
					-E
					ACC
					-y-property
					classifier.minNumObj
					-y-min
					2.0
					-y-max
					4.0
					-y-step
					1.0
					-y-base
					10.0
					-y-expression
					I
					-filter
					weka.filters.AllFilter
					-x-property
					classifier.confidenceFactor
					-x-min
					0.1
					-x-max
					0.5
					-x-step
					0.1
					-x-base
					10.0
					-x-expression
					I
					-sample-size
					100.0
					-traversal
					COLUMN-WISE
					-log-file
					/home/fracpete/development/projects/adams
					-num-slots
					1
					-S
					1
					-W
					weka.classifiers.trees.J48
					--
					-C
					0.25
					-M
					2
					
					
					
					
					
					
					
					
					
					
					
					
	-actor
		adams.flow.transformer.Convert
			-conversion
				adams.data.conversion.AnyToCommandline
	-actor
		adams.flow.transformer.StringReplace
			-name
			StringReplace (separator)
			-find
			^
			-replace
			: 
	-actor
		adams.flow.transformer.StringReplace
			-name
			StringReplace (dataset)
			-find
			^
			-replace
			@{dataset}
	-actor
		adams.flow.sink.Display
	-flow-execution-listener
		adams.flow.execution.NullListener

