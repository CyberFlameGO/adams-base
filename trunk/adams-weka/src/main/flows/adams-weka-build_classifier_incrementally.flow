adams.flow.control.Flow
	-annotation
	Trains NaiveBayesUpdateable in an incremental fashion\nand plots every \"interval\" instances the Accuracy, RMSE and AUC.
	-actor
		adams.flow.standalone.SetVariable
			-annotation
			After how many instances the classifier is evaluated against the test set.
			-var-name
			interval
			-var-value
			3
	-actor
		adams.flow.standalone.GridView
			-actor
				adams.flow.sink.SequencePlotter
					-name
					Accuracy
					-writer
						adams.gui.print.NullWriter
					-paintlet
						adams.gui.visualization.sequence.PaintletWithFixedYRange
							-max-y
							100.0
							-paintlet
								adams.gui.visualization.sequence.LinePaintlet
					-overlay-paintlet
						adams.gui.visualization.sequence.CirclePaintlet
					-marker-paintlet
						adams.flow.sink.sequenceplotter.NoMarkers
					-error-paintlet
						adams.flow.sink.sequenceplotter.NoErrorPaintlet
					-color-provider
						adams.gui.visualization.core.DefaultColorProvider
					-overlay-color-provider
						adams.gui.visualization.core.DefaultColorProvider
					-title
					Accuracy
					-axis-x
						adams.gui.visualization.core.AxisPanelOptions
							-label
							Evaluation step
							-tick-generator
								adams.gui.visualization.core.axis.FancyTickGenerator
							-nth-value
							2
							-width
							40
							-custom-format
							0.0
					-axis-y
						adams.gui.visualization.core.AxisPanelOptions
							-label
							Statistic
							-tick-generator
								adams.gui.visualization.core.axis.FancyTickGenerator
							-nth-value
							2
							-width
							60
							-custom-format
							0.0
					-plot-updater
						adams.flow.sink.sequenceplotter.SimplePlotUpdater
							-update-interval
							10
					-post-processor
						adams.flow.sink.sequenceplotter.PassThrough
			-actor
				adams.flow.sink.SequencePlotter
					-name
					RMSE
					-writer
						adams.gui.print.NullWriter
					-paintlet
						adams.gui.visualization.sequence.LinePaintlet
					-overlay-paintlet
						adams.gui.visualization.sequence.CirclePaintlet
					-marker-paintlet
						adams.flow.sink.sequenceplotter.NoMarkers
					-error-paintlet
						adams.flow.sink.sequenceplotter.NoErrorPaintlet
					-color-provider
						adams.gui.visualization.core.DefaultColorProvider
					-overlay-color-provider
						adams.gui.visualization.core.DefaultColorProvider
					-title
					RMSE
					-axis-x
						adams.gui.visualization.core.AxisPanelOptions
							-label
							Evaluation step
							-tick-generator
								adams.gui.visualization.core.axis.FancyTickGenerator
							-nth-value
							2
							-width
							40
							-custom-format
							0.0
					-axis-y
						adams.gui.visualization.core.AxisPanelOptions
							-label
							Statistic
							-tick-generator
								adams.gui.visualization.core.axis.FancyTickGenerator
							-nth-value
							2
							-width
							60
							-custom-format
							0.00
					-plot-updater
						adams.flow.sink.sequenceplotter.SimplePlotUpdater
							-update-interval
							10
					-post-processor
						adams.flow.sink.sequenceplotter.PassThrough
			-actor
				adams.flow.sink.SequencePlotter
					-name
					AUC
					-writer
						adams.gui.print.NullWriter
					-paintlet
						adams.gui.visualization.sequence.PaintletWithFixedYRange
							-max-y
							1.0
							-paintlet
								adams.gui.visualization.sequence.LinePaintlet
					-overlay-paintlet
						adams.gui.visualization.sequence.CirclePaintlet
					-marker-paintlet
						adams.flow.sink.sequenceplotter.NoMarkers
					-error-paintlet
						adams.flow.sink.sequenceplotter.NoErrorPaintlet
					-color-provider
						adams.gui.visualization.core.DefaultColorProvider
					-overlay-color-provider
						adams.gui.visualization.core.DefaultColorProvider
					-title
					AUC
					-axis-x
						adams.gui.visualization.core.AxisPanelOptions
							-label
							Evaluation step
							-tick-generator
								adams.gui.visualization.core.axis.FancyTickGenerator
							-nth-value
							2
							-width
							40
							-custom-format
							0.0
					-axis-y
						adams.gui.visualization.core.AxisPanelOptions
							-label
							Statistic
							-tick-generator
								adams.gui.visualization.core.axis.FancyTickGenerator
							-nth-value
							2
							-width
							60
							-custom-format
							0.0
					-plot-updater
						adams.flow.sink.sequenceplotter.SimplePlotUpdater
							-update-interval
							10
					-post-processor
						adams.flow.sink.sequenceplotter.PassThrough
			-num-rows
			3
	-actor
		adams.flow.standalone.CallableActors
			-actor
				adams.flow.source.StorageValue
					-name
					Testset
					-storage-name
					test
			-actor
				adams.flow.source.WekaClassifierSetup
					-classifier
						weka.classifiers.bayes.NaiveBayesUpdateable
							
							
							
	-actor
		adams.flow.source.Start
	-actor
		adams.flow.control.Trigger
			-name
			load testset
			-tee
				adams.flow.source.FileSupplier
					-file
					${EXAMPLE_FLOWS}/data/anneal_test.arff
			-tee
				adams.flow.transformer.WekaFileReader
					-loader
						weka.core.converters.ArffLoader
			-tee
				adams.flow.transformer.WekaClassSelector
			-tee
				adams.flow.transformer.SetStorageValue
					-storage-name
					test
	-actor
		adams.flow.control.Trigger
			-name
			generate learning curve
			-tee
				adams.flow.source.FileSupplier
					-file
					${EXAMPLE_FLOWS}/data/anneal_train.arff
			-tee
				adams.flow.transformer.WekaFileReader
					-loader
						weka.core.converters.ArffLoader
					-output-type
					INCREMENTAL
			-tee
				adams.flow.transformer.WekaClassSelector
			-tee
				adams.flow.transformer.WekaTrainClassifier
					-name
					WekaClassifier
			-tee
				adams.flow.control.ConditionalTee
					-tee
						adams.flow.transformer.WekaTestSetEvaluator
							-output
								weka.classifiers.evaluation.output.prediction.Null
					-tee
						adams.flow.control.Branch
							-branch
								adams.flow.control.Sequence
									-name
									Accuracy
									-actor
										adams.flow.transformer.WekaEvaluationValuePicker
									-actor
										adams.flow.transformer.MakePlotContainer
											-plot-name
											Accuracy
									-actor
										adams.flow.sink.CallableSink
											-callable
											Accuracy
							-branch
								adams.flow.control.Sequence
									-name
									RMSE
									-actor
										adams.flow.transformer.WekaEvaluationValuePicker
											-statistic
											ROOT_MEAN_SQUARED_ERROR
									-actor
										adams.flow.transformer.MakePlotContainer
											-plot-name
											RMSE
									-actor
										adams.flow.sink.CallableSink
											-callable
											RMSE
							-branch
								adams.flow.control.Sequence
									-name
									AUC
									-actor
										adams.flow.transformer.WekaEvaluationValuePicker
											-statistic
											AREA_UNDER_ROC
									-actor
										adams.flow.transformer.MakePlotContainer
											-plot-name
											AUC
									-actor
										adams.flow.sink.CallableSink
											-callable
											AUC
					-condition
						adams.flow.condition.bool.Counting
							-interval
							@{interval}
	-flow-execution-listener
		adams.flow.execution.NullListener

