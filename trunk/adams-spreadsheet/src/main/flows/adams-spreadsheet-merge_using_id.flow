adams.flow.control.Flow
	-annotation
	Shows how to merge two spreadsheets from storage\nusing an ID attribute for aligning the rows in both\nspreadsheets.
	-actor
		adams.flow.standalone.CallableActors
			-actor
				adams.flow.sink.DisplayPanelManager
					-name
					SpreadSheetDisplay
					-width
					740
					-provider
						adams.flow.sink.SpreadSheetDisplay
					-entry-name-variable
					name
	-actor
		adams.flow.source.FileSupplier
			-file
			${EXAMPLE_FLOWS}/data/iris_with_id.csv
	-actor
		adams.flow.control.Tee
			-name
			create first spreadsheet
			-tee
				adams.flow.transformer.SpreadSheetFileReader
					-reader
						adams.data.io.input.CsvSpreadSheetReader
							-spreadsheet-type
								adams.data.spreadsheet.SpreadSheet
			-tee
				adams.flow.transformer.SpreadSheetRemoveColumn
					-annotation
					only leave first 4 columns
					-position
					inv(1-3)
			-tee
				adams.flow.transformer.SpreadSheetSort
					-annotation
					sort by ID attribute (asc)
					-no-copy
					true
			-tee
				adams.flow.transformer.SetStorageValue
					-storage-name
					first
			-tee
				adams.flow.transformer.SetVariable
					-var-name
					name
					-var-value
					first
			-tee
				adams.flow.sink.CallableSink
					-callable
					SpreadSheetDisplay
	-actor
		adams.flow.control.Tee
			-name
			create second spreadsheet
			-tee
				adams.flow.transformer.SpreadSheetFileReader
					-reader
						adams.data.io.input.CsvSpreadSheetReader
							-spreadsheet-type
								adams.data.spreadsheet.SpreadSheet
			-tee
				adams.flow.transformer.SpreadSheetRemoveColumn
					-annotation
					remove first 3 columns
					-position
					2-3
			-tee
				adams.flow.transformer.SpreadSheetSort
					-annotation
					sort by ID attribute (desc)
					-no-copy
					true
					-sort-order
					false
			-tee
				adams.flow.transformer.SetStorageValue
					-storage-name
					second
			-tee
				adams.flow.transformer.SetVariable
					-var-name
					name
					-var-value
					second
			-tee
				adams.flow.sink.CallableSink
					-callable
					SpreadSheetDisplay
	-actor
		adams.flow.control.Trigger
			-name
			merge spreadsheets
			-tee
				adams.flow.source.StorageValuesArray
					-storage-name
					first
					-storage-name
					second
			-tee
				adams.flow.transformer.SpreadSheetMerge
					-unique-id
					ID
			-tee
				adams.flow.transformer.SpreadSheetColumnFilter
					-annotation
					remove the 2nd \"ID\" column
					-finder
						adams.data.spreadsheet.columnfinder.Invert
							-column-finder
								adams.data.spreadsheet.columnfinder.FilteredColumnFinder
									-filter
										adams.data.spreadsheet.columnfinder.ByIndex
											-columns
											2-last
									-finder
										adams.data.spreadsheet.columnfinder.ByName
											-reg-exp
											ID
			-tee
				adams.flow.transformer.SetVariable
					-var-name
					name
					-var-value
					merged
			-tee
				adams.flow.sink.CallableSink
					-callable
					SpreadSheetDisplay
	-flow-execution-listener
		adams.flow.execution.NullListener

