adams.flow.control.Flow
	-annotation
	Shows how to calculate slope/intercept of predictions (actual/predicted).\nDisplays raw data in table and plot and intercept/slope in table and plot\nas line overlay.
	-actor
		adams.flow.standalone.CallableActors
			-actor
				adams.flow.sink.SpreadSheetDisplay
					-name
					Raw
					-short-title
					true
					-writer
						adams.data.io.output.NullWriter
			-actor
				adams.flow.sink.SpreadSheetDisplay
					-name
					Slope/Intercept
					-short-title
					true
					-width
					300
					-height
					200
					-x
					-2
					-writer
						adams.data.io.output.NullWriter
			-actor
				adams.flow.sink.SequencePlotter
					-name
					Plot
					-short-title
					true
					-x
					-3
					-writer
						adams.gui.print.NullWriter
					-comparison
					X_AND_Y
					-paintlet
						adams.gui.visualization.sequence.CirclePaintlet
					-overlay-paintlet
						adams.gui.visualization.sequence.StraightLineOverlayPaintlet
							-x-factor
							@{slope}
							-y-offset
							@{intercept}
							-color
							#ff0000
					-marker-paintlet
						adams.flow.sink.sequenceplotter.NoMarkers
					-error-paintlet
						adams.flow.sink.sequenceplotter.NoErrorPaintlet
					-mouse-click-action
						adams.flow.sink.sequenceplotter.NullClickAction
					-color-provider
						adams.gui.visualization.core.DefaultColorProvider
					-overlay-color-provider
						adams.gui.visualization.core.DefaultColorProvider
					-title
					Predictions
					-axis-x
						adams.gui.visualization.core.AxisPanelOptions
							-label
							actual
							-tick-generator
								adams.gui.visualization.core.axis.FancyTickGenerator
							-nth-value
							2
							-width
							40
							-custom-format
							0.0
					-axis-y
						adams.gui.visualization.core.AxisPanelOptions
							-label
							predicted
							-tick-generator
								adams.gui.visualization.core.axis.FancyTickGenerator
							-nth-value
							2
							-width
							60
							-custom-format
							0.0
					-plot-updater
						adams.flow.sink.sequenceplotter.SimplePlotUpdater
							-update-interval
							-1
					-post-processor
						adams.flow.sink.sequenceplotter.PassThrough
	-actor
		adams.flow.source.FileSupplier
			-file
			${EXAMPLE_FLOWS}/data/predictions.csv
	-actor
		adams.flow.transformer.SpreadSheetFileReader
			-reader
				adams.data.io.input.CsvSpreadSheetReader
					-data-row-type
						adams.data.spreadsheet.DenseDataRow
					-spreadsheet-type
						adams.data.spreadsheet.SpreadSheet
	-actor
		adams.flow.control.Tee
			-name
			# rows
			-tee
				adams.flow.transformer.SpreadSheetInfo
			-tee
				adams.flow.transformer.MathExpression
					-expression
					X+1
			-tee
				adams.flow.transformer.Convert
					-conversion
						adams.data.conversion.DoubleToInt
			-tee
				adams.flow.transformer.SetVariable
					-var-name
					num_rows
	-actor
		adams.flow.control.Tee
			-name
			raw data + formulas for intercept/slope
			-tee
				adams.flow.control.SubProcess
					-name
					intercept
					-actor
						adams.flow.transformer.SpreadSheetInsertRow
							-after
							true
					-actor
						adams.flow.transformer.SpreadSheetSetCell
							-name
							label
							-no-copy
							true
							-row
							last
							-value
							Intercept
					-actor
						adams.flow.control.Trigger
							-name
							create formula
							-tee
								adams.flow.source.CombineVariables
									-expression
									=intercept(B2:B@{num_rows}; A2:A@{num_rows})
							-tee
								adams.flow.transformer.SetVariable
									-var-name
									formula
					-actor
						adams.flow.transformer.SpreadSheetSetCell
							-name
							formula
							-no-copy
							true
							-row
							last
							-col
							2
							-value
							@{formula}
			-tee
				adams.flow.control.SubProcess
					-name
					slope
					-actor
						adams.flow.transformer.SpreadSheetInsertRow
							-after
							true
					-actor
						adams.flow.transformer.SpreadSheetSetCell
							-name
							label
							-no-copy
							true
							-row
							last
							-value
							Slope
					-actor
						adams.flow.control.Trigger
							-name
							create formula
							-tee
								adams.flow.source.CombineVariables
									-expression
									=slope(B2:B@{num_rows}; A2:A@{num_rows})
							-tee
								adams.flow.transformer.SetVariable
									-var-name
									formula
					-actor
						adams.flow.transformer.SpreadSheetSetCell
							-name
							formula
							-no-copy
							true
							-row
							last
							-col
							2
							-value
							@{formula}
			-tee
				adams.flow.sink.CallableSink
					-callable
					Raw
	-actor
		adams.flow.control.Tee
			-name
			calc slope/intercept via statistic)
			-tee
				adams.flow.transformer.SpreadSheetStatistic
					-location
					1
					-location
					2
					-statistic
						adams.data.statistics.ArrayLinearRegression
			-tee
				adams.flow.control.Tee
					-name
					values -> variables
					-tee
						adams.flow.transformer.SpreadSheetVariableRowIterator
							-rows
							first
			-tee
				adams.flow.sink.CallableSink
					-callable
					Slope/Intercept
	-actor
		adams.flow.transformer.SpreadSheetPlotGenerator
			-generator
				adams.flow.transformer.plotgenerator.XYPlotGenerator
					-columns
					2
					-x-column
					1
	-actor
		adams.flow.control.PlotContainerUpdater
			-actor
				adams.flow.transformer.StringReplace
					-find
					.*
					-replace
					act vs pred
			-container-value
			PLOT_NAME
	-actor
		adams.flow.sink.CallableSink
			-callable
			Plot
	-flow-execution-listener
		adams.flow.execution.NullListener

