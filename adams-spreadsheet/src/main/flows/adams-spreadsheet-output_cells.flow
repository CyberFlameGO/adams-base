adams.flow.control.Flow
	-annotation
	Iterates over all cells (row-wise) and outputs their values.
	-actor
		adams.flow.source.FileSupplier
			-file
			${EXAMPLE_FLOWS}/data/bolts.csv
	-actor
		adams.flow.transformer.SpreadSheetFileReader
			-reader
				adams.data.io.input.CsvSpreadSheetReader
					-data-row-type
						adams.data.spreadsheet.DenseDataRow
					-spreadsheet-type
						adams.data.spreadsheet.SpreadSheet
	-actor
		adams.flow.transformer.SetStorageValue
			-storage-name
			spreadsheet
	-actor
		adams.flow.control.Tee
			-name
			# columns
			-tee
				adams.flow.transformer.SpreadSheetInfo
					-type
					NUM_COLUMNS
			-tee
				adams.flow.transformer.SetVariable
					-var-name
					cols
	-actor
		adams.flow.control.Tee
			-name
			# rows
			-tee
				adams.flow.transformer.SpreadSheetInfo
			-tee
				adams.flow.transformer.SetVariable
					-var-name
					rows
	-actor
		adams.flow.control.Trigger
			-name
			iterate over rows
			-tee
				adams.flow.source.ForLoop
					-upper
					@{rows}
			-tee
				adams.flow.transformer.SetVariable
					-var-name
					row
			-tee
				adams.flow.control.Trigger
					-name
					iterate over cells in row
					-tee
						adams.flow.source.ForLoop
							-upper
							@{cols}
					-tee
						adams.flow.transformer.SetVariable
							-var-name
							col
					-tee
						adams.flow.control.Trigger
							-name
							output cell
							-tee
								adams.flow.source.StorageValue
									-storage-name
									spreadsheet
							-tee
								adams.flow.transformer.SpreadSheetGetCell
									-row
									@{row}
									-col
									@{col}
									-empty
									N/A
							-tee
								adams.flow.transformer.Convert
									-conversion
										adams.data.conversion.AnyToString
							-tee
								adams.flow.transformer.StringReplace
									-find
									^
									-replace
									@{row}/@{col}: 
									-variable
									true
							-tee
								adams.flow.sink.Display
									-writer
										adams.data.io.output.NullWriter
	-flow-execution-listener
		adams.flow.execution.NullListener

