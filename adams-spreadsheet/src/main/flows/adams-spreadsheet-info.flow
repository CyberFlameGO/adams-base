adams.flow.control.Flow
	-annotation
	Outputs some basic information on the spreadsheet.
	-actor
		adams.flow.standalone.CallableActors
			-actor
				adams.flow.sink.Display
	-actor
		adams.flow.source.FileSupplier
			-file
			${EXAMPLE_FLOWS}/data/bolts.csv
	-actor
		adams.flow.transformer.SpreadSheetFileReader
			-reader
				adams.data.io.input.CsvSpreadSheetReader
					-spreadsheet-type
						adams.data.spreadsheet.SpreadSheet
	-actor
		adams.flow.control.Tee
			-name
			# columns
			-tee
				adams.flow.transformer.SpreadSheetInfo
					-type
					NUM_COLUMNS
			-tee
				adams.flow.transformer.SetVariable
					-var-name
					num_cols
			-tee
				adams.flow.transformer.Convert
					-conversion
						adams.data.conversion.AnyToString
			-tee
				adams.flow.transformer.StringInsert
					-position
					first
					-value
					# columns: 
			-tee
				adams.flow.sink.CallableSink
					-callable
					Display
	-actor
		adams.flow.control.Tee
			-name
			# rows
			-tee
				adams.flow.transformer.SpreadSheetInfo
			-tee
				adams.flow.transformer.Convert
					-conversion
						adams.data.conversion.AnyToString
			-tee
				adams.flow.transformer.StringInsert
					-position
					first
					-value
					# rows: 
			-tee
				adams.flow.sink.CallableSink
					-callable
					Display
	-actor
		adams.flow.control.Tee
			-name
			timezone
			-tee
				adams.flow.transformer.SpreadSheetInfo
					-type
					TIMEZONE
			-tee
				adams.flow.transformer.Convert
					-conversion
						adams.data.conversion.AnyToString
			-tee
				adams.flow.transformer.StringInsert
					-position
					first
					-value
					timezone: 
			-tee
				adams.flow.sink.CallableSink
					-callable
					Display
	-actor
		adams.flow.control.Tee
			-name
			locale
			-tee
				adams.flow.transformer.SpreadSheetInfo
					-type
					LOCALE
			-tee
				adams.flow.transformer.Convert
					-conversion
						adams.data.conversion.AnyToString
			-tee
				adams.flow.transformer.StringInsert
					-position
					first
					-value
					locale: 
			-tee
				adams.flow.sink.CallableSink
					-callable
					Display
	-actor
		adams.flow.transformer.SetStorageValue
			-storage-name
			sheet
	-actor
		adams.flow.control.Trigger
			-name
			column names
			-tee
				adams.flow.source.StorageForLoop
					-upper
					@{num_cols}
					-variable
					col
					-storage
					sheet
			-tee
				adams.flow.transformer.SpreadSheetInfo
					-type
					COLUMN_NAME
					-column-index
					@{col}
			-tee
				adams.flow.transformer.StringInsert
					-position
					first
					-value
					column @{col}: 
					-variable
					true
			-tee
				adams.flow.sink.CallableSink
					-callable
					Display
	-flow-execution-listener
		adams.flow.execution.NullListener

