adams.flow.control.Flow
	-annotation
	Extracts a random subset of rows from a text file.
	-actor
		adams.flow.standalone.CallableActors
			-actor
				adams.flow.sink.Display
					-name
					Normal
					-short-title
					true
					-writer
						adams.data.io.output.NullWriter
			-actor
				adams.flow.sink.Display
					-name
					Inverted
					-short-title
					true
					-x
					-3
					-writer
						adams.data.io.output.NullWriter
	-actor
		adams.flow.source.FileSupplier
			-file
			${EXAMPLE_FLOWS}/data/numbers.txt
	-actor
		adams.flow.transformer.TextFileReader
			-reader
				adams.data.io.input.LineArrayTextReader
	-actor
		adams.flow.control.Branch
			-branch
				adams.flow.control.Sequence
					-name
					normal
					-actor
						adams.flow.transformer.SetVariable
							-var-name
							normal
							-var-value
							0
					-actor
						adams.flow.transformer.ArrayFolds
							-generator
								adams.data.random.JavaRandomInt
					-actor
						adams.flow.transformer.IncVariable
							-var-name
							normal
					-actor
						adams.flow.control.Trigger
							-name
							separator
							-tee
								adams.flow.source.CombineVariables
									-expression
									--> split @{normal}
							-tee
								adams.flow.sink.CallableSink
									-callable
									Normal
					-actor
						adams.flow.transformer.ArrayToSequence
					-actor
						adams.flow.sink.CallableSink
							-callable
							Normal
			-branch
				adams.flow.control.Sequence
					-name
					inverted
					-actor
						adams.flow.transformer.SetVariable
							-var-name
							inverse
							-var-value
							0
					-actor
						adams.flow.transformer.ArrayFolds
							-generator
								adams.data.random.JavaRandomInt
							-split-result
							INVERSE
					-actor
						adams.flow.transformer.IncVariable
							-var-name
							inverse
					-actor
						adams.flow.control.Trigger
							-name
							separator
							-tee
								adams.flow.source.CombineVariables
									-expression
									--> split @{inverse}
							-tee
								adams.flow.sink.CallableSink
									-callable
									Inverted
					-actor
						adams.flow.transformer.ArrayToSequence
					-actor
						adams.flow.sink.CallableSink
							-callable
							Inverted
	-flow-execution-listener
		adams.flow.execution.NullListener

